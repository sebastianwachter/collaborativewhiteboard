html
  head
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat")
    link(rel="stylesheet" type="text/css" href="./styles/style.css")
    script(src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
    script(src="/socket.io/socket.io.js")
    title Collaborative whiteboard
  body
    div.content
      div.headline
        h1 Draw on the area below. Watch it appear everywhere else.
      div.settings
        p Select a color:
        input(type="color" id="colorPicker" defaultvalue="#000000")
        p Select your pencil size:
        select(id="sizePicker")
          option(value="5") 5
          option(value="10" selected) 10
          option(value="15") 15
          option(value="20") 20
          option(value="25") 25
          option(value="30") 30
        button.button#save Save
        button.button#clear Clear
      div.drawArea
        canvas#whiteboard(width="800" height="600")
    script(src="./scripts/script.js")
